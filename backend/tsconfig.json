{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "commonjs",
    "strict": true,
    "baseUrl": "./",
    "outDir": "build",
    "sourceMap": true,
    "removeComments": true,
    "experimentalDecorators": true,
    "target": "es6",
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "types": [
      "node",
      "express",
      "jest"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": ["es2020", "dom", "esnext"]
  },
  "include": [
    "./src/**/*.ts",
  ],
  "exclude": [
    "./src/**/*.test.ts",
    "./src/public/"
  ]
}
